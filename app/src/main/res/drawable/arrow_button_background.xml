<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <corners android:radius="8dp" />
    <solid android:color="#000000" /> <!-- Set the desired background color here -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="8dp"
        android:bottom="8dp" />
    <size
        android:width="120dp"
        android:height="60dp" />
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape>
                <solid android:color="#000000" /> <!-- Set the desired arrow color here -->
                <size
                    android:width="12dp"
                    android:height="2dp" />
            </shape>
        </rotate>
    </item>

</shape>