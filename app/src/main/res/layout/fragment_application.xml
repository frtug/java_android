<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:scrollbarThumbVertical="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view9"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@android:color/transparent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                app:srcCompat="@drawable/cubes" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:text="This is Farm Analytica's Application Page."
            android:textAlignment="center"
            android:textSize="14sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view10"
            android:layout_gravity="center"
            android:layout_width="375dp"
            android:layout_height="135dp"
            android:translationX="3dp"
            app:cardBackgroundColor="@color/white"
            card_view:cardElevation="30dp"
            card_view:cardCornerRadius="10dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="49dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/predict_and_recommend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Prediction Approach 1"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="70dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="30dp"
                android:padding="16dp"
                android:text="Predict crop and crop yield with fertilizer."
                android:textAlignment="textStart"
                android:textSize="14sp" />

            <Button
                android:id="@+id/approachOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#28A745"
                app:strokeWidth="2dp"
                app:strokeColor="#28A745"
                android:text="Predict Now"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#FFFFFF"
                android:layout_marginStart="245dp"
                android:layout_marginTop="80dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="375dp"
            android:layout_height="135dp"
            android:translationX="3dp"
            app:cardBackgroundColor="@color/white"
            card_view:cardElevation="30dp"
            card_view:cardCornerRadius="10dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="49dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/predict_and_recommend" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Prediction Approach 2"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="70dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="30dp"
                android:padding="16dp"
                android:text="Predict crop and crop yield without fertilizer."
                android:textAlignment="textStart"
                android:textSize="14sp" />

            <Button
                android:id="@+id/approachTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#28A745"
                app:strokeWidth="2dp"
                app:strokeColor="#28A745"
                android:text="Predict Now"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#FFFFFF"
                android:layout_marginStart="245dp"
                android:layout_marginTop="80dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="375dp"
            android:layout_height="150dp"
            android:translationX="3dp"
            app:cardBackgroundColor="@color/white"
            card_view:cardElevation="30dp"
            card_view:cardCornerRadius="10dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="49dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/calendar_schedule" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Schedule Page"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="70dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="306dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="30dp"
                android:padding="16dp"
                android:text="Create a schedule and receive email updates regarding the status of your crops."
                android:textAlignment="textStart"
                android:textSize="14sp" />

            <Button
                android:id="@+id/schedulePage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="#28A745"
                app:strokeWidth="2dp"
                app:strokeColor="#28A745"
                android:text="Create Now"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#FFFFFF"
                android:layout_marginStart="245dp"
                android:layout_marginTop="90dp"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>