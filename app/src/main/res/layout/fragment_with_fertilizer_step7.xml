<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/green_gradient"
    tools:context=".Application">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarThumbVertical="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1800dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view9"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="125dp"
                android:layout_centerHorizontal="true"
                card_view:cardElevation="30dp"
                card_view:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:text="7/7: Generate Summary"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:translationY="10dp" />

                <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="63dp"
                    android:layout_marginStart="45dp"/>

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/form_error_check"
                    android:layout_marginTop="52dp"
                    android:layout_marginStart="275dp"/>

                <ImageView
                    android:layout_width="190dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="35dp"
                    app:srcCompat="@drawable/allstepsapproach1" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GENERATED SUMMARY"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#FFFFFF"
                android:textSize="25dp"
                android:textStyle="bold"
                android:translationY="190dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="500dp"
                android:translationY="250dp"
                card_view:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp"
                android:layout_centerHorizontal="true"
                card_view:cardCornerRadius="4dp">

                <TextView
                    android:id="@+id/showNitrogen"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textAlignment="center"
                    android:background="@drawable/green_gradient"
                    android:text="ex. NITROGEN : 34.0000 ppm"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="15sp"
                    android:translationY="10dp" />

                <TextView
                    android:id="@+id/showPhosphorus"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textAlignment="center"
                    android:background="@drawable/green_gradient"
                    android:text="ex. PHOSPHORUS : 63.0000 ppm"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="15sp"
                    android:translationY="50dp" />

                <TextView
                    android:id="@+id/showPotassium"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textAlignment="center"
                    android:background="@drawable/green_gradient"
                    android:text="ex. POTASSIUM : 36.0000 ppm"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="15sp"
                    android:translationY="90dp" />

                <TextView
                    android:id="@+id/showPredictedCrop"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textAlignment="center"
                    android:background="@drawable/green_gradient"
                    android:text="ex. CROP : MAIS"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="15sp"
                    android:translationY="130dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textAlignment="center"
                    android:background="@drawable/green_gradient"
                    android:text="ex. FERTILIZER : 10-26-26"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="15sp"
                    android:translationY="170dp" />

                <TextView
                    android:id="@+id/showPredictedCropYield"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:textAlignment="center"
                    android:background="@drawable/green_gradient"
                    android:text="ex. CROP YIELD : 1106.4956 kg"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textColor="@color/white"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="15sp"
                    android:translationY="210dp" />


                <Button
                    android:id="@+id/backToLandingAfterWF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:backgroundTint="#28A745"
                    app:strokeWidth="2dp"
                    app:strokeColor="#28A745"
                    android:text="BACK TO HOME"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:translationY="260dp"/>

                <Button
                    android:id="@+id/backtoWFS6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:backgroundTint="#28A745"
                    app:strokeWidth="2dp"
                    app:strokeColor="#28A745"
                    android:text="BACK"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="#FFFFFF"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:translationY="310dp"/>


            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>

</FrameLayout>